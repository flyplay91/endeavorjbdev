    <tr><th>Size</th><th>US Size</th><th>Waist</th><th>Bust</th></tr>
  </thead>
  <tbody>
    <tr><td>S/M</td><td>0-4</td><td>23-27</td><td>30-35</td></tr>
    <tr><td>M/L</td><td>6-10</td><td>27-31</td><td>36-41</td></tr>
  </tbody>
  <tfoot>
    <tr><td colspan=3></td><td>Inches</td></tr>
  </tfoot>
</table>
{% endif %}
