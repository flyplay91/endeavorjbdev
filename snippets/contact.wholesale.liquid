{% form 'contact' %}
{% if form.posted_successfully? %}
<div class="successForm feedback">
  <p>Thanks for contacting us! We'll get back to you as soon as possible.</p>
</div>
{% endif %}

{% if form.errors %}
<div class="errorForm feedback">
  <!-- {{ form.errors.size }} or {{ form.errors | size }} -->
  <p>Oops, sorry. We were unable to submit your inquiry because it contained {{ form.errors | size | pluralize: 'an error', 'a few errors' }}. Please correct the following and submit again:</p>
  {% for field in form.errors %}
    <p>The {{ field | capitalize | replace: 'Body', 'Message' }} field {{ form.errors.messages[field] }}.</p>
  {% endfor %}
</div>
{% endif %}
 

<div id="contactFormWrapper">
	<div class="desktop-4 mobile-3">
        <p>
            <label>Name *</label>
            <input type="text" id="contactFormName" name="contact[name]" placeholder="" required="" />
        </p>
    </div>
  
  	<div class="desktop-4 mobile-3">
        <p>
            <label>Email *</label>
            <input type="email" id="contactFormEmail" name="contact[email]" placeholder="" required="" />
        </p>
    </div>
  
  	<div class="desktop-4 mobile-3">
        <p>
            <label>Phone Number *</label>
            <input type="text" id="contactFormTelephone" name="contact[phone]" placeholder=""  required="" />
        </p> 
    </div>
  
  	<div class="desktop-4 mobile-3">
        <p>
            <label>Boutique/Company *</label>
            <input type="text" id="contactFormCompany" name="contact[company]" placeholder="" required="" />
        </p>

        <p>
            <label>Where did you hear about Joah Brown? *</label>
            <select id="contactFormHearFrom" name="contact[hear from]" required="">  
                <option value="">Select</option> 
                <option value="Friends/Family">Friends/Family</option>
                <option value="Internet Search">Internet Search</option>
                <option value="Social Media (Facebook/Twitter/Youtube)">Social Media (Facebook/Twitter/Youtube)</option>
                <option value="Business Referral">Business Referral</option>
                <option value="Trade Show">Trade Show</option>
                <option value="Other">Other</option>
            </select>
        </p>
    </div>
  
  	<div class="desktop-4 mobile-3">
        <p>
            <label>Business Address *</label>
            <textarea  id="contactFormAddress" name="contact[address]" placeholder="" required="" ></textarea>
        </p>
    </div>
  
  	<div class="desktop-4 mobile-3">
        <p>
            <label>Message *</label>
            <textarea  id="contactFormMessage" name="contact[body]" placeholder="" required="" ></textarea>
        </p>
    </div>
  <div class="desktop-8 mobile-3">
    &nbsp;
  </div>
  <div class="desktop-4 mobile-3">
    <p>
    	<input type="submit" id="contactFormSubmit" class="secondary button" value="SEND" />
    </p> 
  </div>
</div>

<!-- contactWrapper -->
{% endform %}      

<div class="clear"></div>
      
{% if settings.show-map %}
<div id="gmap">
<div class="Flexible-container">
  {{ settings.map }}
</div>
</div>
{% endif %}

