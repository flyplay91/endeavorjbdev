<div id="customers-register-section">
  <div class="container main content">
    <div class="section clearfix">
      <div class="six columns offset-by-five">
        <br class="clear" />
        <div id="customer">
          <!-- Create Customer -->
          <div id="create-customer">

            {% form 'create_customer', return_to: "/account" %}
            {{ form.errors | default_errors }}

            <div id="first_name" class="clearfix large_form">
              <input type="text" value="" name="customer[first_name]" id="first_name" class="large" size="30" placeholder="First Name" />
            </div>

            <div id="last_name" class="clearfix large_form">
              <input type="text" value="" name="customer[last_name]" id="last_name" class="large" size="30" placeholder="Last Name"/>
            </div>

            <div id="email" class="clearfix large_form">
              <input type="email" value="" name="customer[email]" id="email" class="large" size="30" placeholder="Email"/>
            </div>

            <div id="password" class="clearfix large_form">
              <input type="password" value="" name="customer[password]" id="password" class="large password" size="30" placeholder="Password"/>
            </div>

            <div class="note">
              <input type="hidden" name="customer[accepts_marketing]" value="" />
              <input type="checkbox" name="customer[accepts_marketing]" checked="checked" />
              <label for="customer[accepts_marketing]">{{ 'customer.register.accepts_marketing' | t }}</label>
            </div>

            <div class="action_bottom desktop">
              <input class="btn action_button" type="submit" value="{{ 'customer.register.sign_up' | t }}" />
              <div class="note">{{ 'customer.register.returning_customer_label' | t }} {{ 'customer.register.sign_in_html' | t | customer_login_link }}</div>
            </div>
            

            <input type="hidden" name="contact[tags]" value="newsletter">
            
            <div class="action_bottom mobile">
              <input class="btn action_button" type="submit" value="{{ 'customer.register.sign_up' | t }}" />
              <p>or</p>
              <div><a href="/account/login">Log In</a></div>
              </div>
            </div>

            {% endform %}
          </div><!-- /#create-customer -->
        </div>
      </div>
    </div>
  </div>
</div>

